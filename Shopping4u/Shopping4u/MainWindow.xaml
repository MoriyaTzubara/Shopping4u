<Window x:Class="Shopping4u.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shopping4u"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" WindowStyle="None" 
        ResizeMode="NoResize" Background="{x:Null}" AllowsTransparency="True"
        Height="650" Width="1000">

    <Grid>
        <materialDesign:Card Margin="10" UniformCornerRadius="15">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10*"/>
                </Grid.ColumnDefinitions>

                <Grid.Resources>
                    <Style TargetType="materialDesign:PackIcon">
                        <Setter Property="Width" Value="30"></Setter>
                        <Setter Property="Height" Value="30"></Setter>
                    </Style>
                </Grid.Resources>

                <Grid Grid.Column="0">
                    <ListView Margin="0 15">

                        <!-- CartOutline icon-->
                        <ListViewItem HorizontalAlignment="Center" Margin="0 0 0 30" >

                            <Button Style="{StaticResource MaterialDesignFloatingActionButton}" 
                                    HorizontalAlignment="Left" BorderBrush="{x:Null}" Background="{x:Null}"
                                    Command="{Binding GoToMyShoppingListPageCommand}"
                                    Foreground="Black" >
                                <StackPanel>
                                    <materialDesign:Badged Badge="3" Padding="-5">
                                        <materialDesign:PackIcon Kind="CartOutline" />
                                    </materialDesign:Badged>
                                </StackPanel>
                            </Button>
                        </ListViewItem>

                        <!-- Home icon-->
                        <ListViewItem HorizontalAlignment="Center" Margin="0">
                            <Button Style="{StaticResource MaterialDesignFloatingActionButton}" 
                                    Command="{Binding GoToHomePageCommand}"
                                    CommandParameter="{x:Null}"
                                    HorizontalAlignment="Left" BorderBrush="{x:Null}" Background="{x:Null}"
                                    Foreground="Black">
                                <StackPanel Margin="-5">
                                    <materialDesign:PackIcon Kind="Home" />
                                </StackPanel>
                            </Button>
                        </ListViewItem>
                        
                        <!-- StarOutline icon-->
                        <ListViewItem HorizontalAlignment="Center" Margin="0">
                            <Button Style="{StaticResource MaterialDesignFloatingActionButton}" 
                                    Command="{Binding GoToRecommendedShoppingListPageCommand}"
                                    CommandParameter="{x:Null}"
                                    HorizontalAlignment="Left" BorderBrush="{x:Null}" Background="{x:Null}"
                                    Foreground="Black">
                                <StackPanel Margin="-5">
                                    <materialDesign:PackIcon Kind="StarOutline" />
                                </StackPanel>
                            </Button>
                        </ListViewItem>

                        <!-- History icon-->
                        <ListViewItem HorizontalAlignment="Center" Margin="0">
                            <Button Style="{StaticResource MaterialDesignFloatingActionButton}" 
                                    HorizontalAlignment="Left" BorderBrush="{x:Null}" Background="{x:Null}"
                                    Command="{Binding GoToShoppingHistoryPageCommand}"
                                    Foreground="Black">
                                <StackPanel Margin="-5">
                                    <materialDesign:PackIcon Kind="History" />
                                </StackPanel>
                            </Button>
                        </ListViewItem>

                        <!-- ChartBar icon-->
                        <ListViewItem HorizontalAlignment="Center" Margin="0">
                            <Button Style="{StaticResource MaterialDesignFloatingActionButton}" 
                                    HorizontalAlignment="Left" BorderBrush="{x:Null}" Background="{x:Null}"
                                    Command="{Binding GoToStatisticsPageCommand}"
                                    Foreground="Black">
                                <StackPanel Margin="-5">
                                    <materialDesign:PackIcon Kind="ChartBar" />
                                </StackPanel>
                            </Button>
                        </ListViewItem>


                        <!-- ExitToApp icon-->
                        <ListViewItem HorizontalAlignment="Center" Margin="0 50 0 0">
                            <Button Style="{StaticResource MaterialDesignFloatingActionButton}" 
                                    HorizontalAlignment="Left" BorderBrush="{x:Null}" Background="{x:Null}"
                                    Foreground="Black" Click="ExitApp">
                                <StackPanel Margin="-5">
                                    <materialDesign:PackIcon Kind="ExitToApp"/>
                                </StackPanel>
                            </Button>
                        </ListViewItem>


                    </ListView>
                </Grid>

                <!-- Render Pages -->
                <Grid Grid.Column="1" Background="#F6F5F8" Name="RenderPages">

                </Grid>

            </Grid>

        </materialDesign:Card>

    </Grid>

</Window>
